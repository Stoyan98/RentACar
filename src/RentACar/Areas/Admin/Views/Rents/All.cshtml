@model IEnumerable<RentServiceModel>

@{ ViewBag.Title = "Rents Administration"; }

<h1 class="text-center">All Rents</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Full Name</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Phone Number</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rent in Model)
        {
<tr>
    <td scope="col">@rent.Id</td>
    <td scope="col">@rent.FirstName @rent.LastName</td>
    <td scope="col">@rent.StartDate.ToShortDateString()</td>
    <td scope="col">@rent.EndDate.ToShortDateString()</td>
    <td scope="col">@rent.PhoneNumber</td>
    <td scope="col">
        <a asp-area="Admin" asp-controller="Rents" asp-action="Delete" asp-route-id="@rent.Id" class="btn btn-danger float-right ml-3">Delete</a>
    </td>
</tr>}
    </tbody>
</table>